<%- include("../layout/header.ejs") %>
<link rel="stylesheet" href="../css/product&products_container.module.css">
  </head>
  <body>
    <%- include("../layout/nav.ejs") %>
    <main>
      <% if(products.length > 0) { %>
      <div class="products_container">
        <% for(let product of products){ %>
          <div class="product">
            <div class="image_container">
              <img class="porduct_image" src="<%= product.imageUrl %>" alt="Product Image">
            </div>
            <div class="infos">
              <h3><%= product.title  %></h3>
              <h4>$<%= product.price %></h4>
              <p class="description">
                <%= product.description %>
              </p>
            </div>
            <div class="buttons_container">
              <a class="btn" href="/admin/edit-product/<%=product.id%>?edit=true">Edit</a>
              <form action="/admin/delete-product" method="POST">
                <input  type="hidden" name="productId" value="<%= product.id %>"/>
                <button type="submit" class="btn">
                  Delete
                </button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
      <% } else { %>
      <h1>No product found</h1>
      <% } %>
    </main>
<%- include("../layout/end.ejs") %>