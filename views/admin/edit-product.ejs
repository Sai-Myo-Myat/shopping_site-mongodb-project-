<%- include("../layout/header.ejs") %>
    <link rel="stylesheet" href="/css/form.module.css" />
  </head>
  <body>
    <%- include("../layout/nav.ejs") %>
    <main class="main">
      <form class="form" action="/admin/<%if(editing){%>edit-product<%} else{%>add-product<%}%>" method="POST">
        <div>
          <label for="title">
            <h3>Title</h3>
          </label> 
          <input class="input" type="text" name="title" value="<%if(editing){%><%=product.title %><%}%>" />
        </div>
        <div>
          <label for="imageUrl">
            <h3>Image-Url</h3>
          </label>
          <input class="input" type="text" name="imageUrl" value="<%if(editing){%><%=product.imageUrl%><%}%>" />
        </div>
        <div>
          <label for="price">
            <h3>Price</h3>
          </label>
          <input class="input" type="number" step="0.01" name="price" value="<%if(editing){%><%=product.price%><%}%>" />
        </div>
        <div>
          <label for="description">
            <h3>Description</h3>
          </label>
          <textarea class="input" name="description" id="description" cols="30" rows="10"><%if(editing){%><%=product.description%><%}%></textarea>
        </div>
        <% if(editing){ %>
          <input type="hidden", name="productId" value="<%= product.id %>">
        <% }%>
        <button class="button" type="submit"><% if(editing){ %> Update Product <% } else{ %> Add Product <%}%> </button>
      </form>
    </main>
<%- include("../layout/end.ejs") %>