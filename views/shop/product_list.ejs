<%- include("../layout/header.ejs") %>
<link rel="stylesheet" href="css/product&products_container.module.css">
  </head>
  <body>
    <%- include("../layout/nav.ejs") %>
    <main>
      <% if(products.length > 0) { %>
      <div class="products_container">
        <% for(let product of products){ %>
          <div class="product">
            <div class="image_container">
              <img class="porduct_image" src="<%= product.imageUrl %>" alt="Product Image">
            </div>
            <div class="infos">
              <h3><%= product.title  %></h3>
              <h4>$<%= product.price %></h4>
              <p class="description">
                <%= product.description %>
              </p>
            </div>
            <div class="buttons_container">
              <a class="btn" href="/products/<%= product._id %>">Details</a>
              <%- include("../components/add-to-cart.ejs", {product: product}) %>
            </div>
            
          </div>
        <% } %>
      </div>
      <% } else { %>
      <h1>No product found</h1>
      <% } %>
    </main>
<%- include("../layout/end.ejs") %>